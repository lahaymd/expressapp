body
	height auto !important

.md-nav-bar
	width 100%
	
ul
	justify-content space-around

.loginBox
	max-width 90%
	width 500px

ul.ng-leave
	animation slideOutRight 3s

[ui-view].ng-enter
	animation rollIn 1s
    


	
[ui-view].ng-leave
	animation rollOut 1s

	

.ui-view.ng-enter
	animation flipInX 1s
	
.ui-view.ng-enter.ng-enter-active
	background red
	
.ui-view.ng-leave
	animation bounceOut 1s
	
.ui-view.ng-leave.ng-leave-active
	background blue
	float right
	
.repeatedItem.ng-leave
	animation bounceOut 3s

.repeatedItem.ng-enter
	animation bounceIn 3s
	



     
