.container.fluid
	.row
		.table-responsive.col-sm-12.col-md-6
				table.table.table-striped.table-bordered.table-hover.table-condensed
					thead
						tr
							th Username 
							th User ID 
							th delete
							th Edit
						tbody
							tr(ng-repeat='user in userlist')
								td.success {{user.username}}
								td {{user._id}} 
								td
									button.btn.btn-danger(ng-click='removeUser(user._id)') delete me
								td  
									button.btn.btn-success
										a(ui-sref="users.detail({id : user._id})") Edit

		div.ui-view.col-sm-12.col-md-6
my-directive(bar='3') transclusion
